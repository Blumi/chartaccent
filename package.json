{
  "name": "chartaccent-standalone",
  "version": "0.0.1",
  "description": "ChartAccent Standalone Tool",
  "main": "index.js",
  "scripts": {
    "install": "mkdir -p build",
    "typings": "typings install",
    "build:chartaccent:js": "node chart-accent/compile.js chart-accent/module.js build/chartaccent.js",
    "build:chartaccent:pegjs": "pegjs -e Expression.Parser --format globals --allowed-start-rules start,string_start chart-accent/expression/parser.pegjs",
    "build:chartaccent:less": "lessc chart-accent/styles/chart-accent.less assets/css/chartaccent.css",
    "build:chartaccent": "npm run build:chartaccent:pegjs && npm run build:chartaccent:js && npm run build:chartaccent:less",
    "build:ts": "tsc -p .",
    "build:webpack": "webpack",
    "build:sass": "sass sass/main.scss:assets/css/bundle.css",
    "build": "npm run build:chartaccent && npm run build:ts && npm run build:webpack && npm run build:sass",
    "watch:ts": "tsc -w -p .",
    "watch:webpack": "webpack -w",
    "watch:sass": "sass -w sass/main.scss:assets/css/bundle.css",
    "serve": "ruby -run -e httpd . -p 8000",
    "watch": "multirun --npm watch:ts watch:webpack watch:sass serve"
  },
  "author": "Donghao Ren <donghao.ren+npm@gmail.com> (https://donghaoren.org/)",
  "license": "BSD-3-Clause",
  "devDependencies": {
    "@types/react": "^16.0.0",
    "@types/react-dom": "^16.0.0",
    "@types/sha1": "^1.1.0",
    "less": "^2.7.1",
    "multirun": "^1.0.0",
    "pegjs": "^0.10.0",
    "sha1": "^1.1.1",
    "source-map-loader": "^0.1.5",
    "typescript": "^2.5.0",
    "url-loader": "^0.5.9",
    "webpack": "^1.14.0"
  },
  "dependencies": {
    "@types/d3": "^3.5.36",
    "@types/fbemitter": "^2.0.32",
    "@types/flux": "0.0.34",
    "@types/google.analytics": "0.0.28",
    "chroma-js": "^1.2.1",
    "d3": "^3.5.17",
    "fbemitter": "^2.1.1",
    "flux": "^3.1.2",
    "jquery": "^3.1.1",
    "react": "^16.0.0",
    "react-dom": "^16.0.0",
    "typeahead.js-browserify": "^1.0.7"
  }
}
